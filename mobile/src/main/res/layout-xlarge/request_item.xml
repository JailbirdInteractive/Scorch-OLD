<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginBottom="5dp">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:id="@+id/friend_image"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"
    android:src="@drawable/day_item"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Friend Name"
    android:textSize="18sp"
    android:textStyle="bold"
    android:id="@+id/friend_name"
    android:layout_marginLeft="5dp"
    android:layout_toEndOf="@+id/friend_image"
    android:layout_toRightOf="@+id/friend_image" />

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/friend_button_selector"
        android:text="Add Friend"
        android:layout_margin="5dp"
        android:textColor="#fff"
        android:id="@+id/add_friend"

        android:layout_toEndOf="@+id/friend_image"
        android:layout_toRightOf="@+id/friend_image"
        android:layout_below="@+id/friend_name"/>
    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/white_button"
        android:text="Decline"
        android:layout_margin="5dp"
        android:textColor="@color/mt_gray4"
        android:id="@+id/decline_friend"
        android:layout_toEndOf="@+id/add_friend"
        android:layout_toRightOf="@+id/add_friend"
        android:layout_below="@+id/friend_name"/>
</RelativeLayout>
</android.support.v7.widget.CardView>