<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="70dp"
    tools:ignore="MissingPrefix"

    android:layout_height="70dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/background_image_view"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_margin="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/day_item" />

        <ImageView
            android:id="@+id/place_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_margin="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/newfire" />

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
           android:layout_centerInParent="true"
            android:text="Place Name"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/white"
            android:shadowColor="@color/colorPrimaryDark"
            android:shadowRadius="5"
            fontPath="fonts/Comfortaa-Bold.ttf"

            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="MissingPrefix" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id"
            android:layout_margin="2dp"
            android:layout_toEndOf="@+id/background_image_view"
            android:layout_toRightOf="@+id/background_image_view"
            android:text="Place Description"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/lit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/blue_fire2"
            android:visibility="gone" />
    </RelativeLayout>
</android.support.v7.widget.CardView>