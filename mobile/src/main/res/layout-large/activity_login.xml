    <Button
        android:id="@+id/google_button"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:padding="20dp"
        android:background="@drawable/g_bg"
        android:layout_marginEnd="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:text="@string/sign_in_with_google"
        android:layout_centerHorizontal="true"
        android:src="@drawable/google_logo"
        android:drawableStart="@drawable/google_logo"
        android:layout_marginRight="20dp"
        android:textColor="#fff"
        android:drawableLeft="@drawable/google_logo" />
    <Button
        android:id="@+id/facebook_button"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/fb_bg"
        android:layout_marginEnd="20dp"
        android:layout_above="@+id/google_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="@string/sign_in_with_facebook"
        android:drawableStart="@drawable/fb_logo"
        android:layout_marginRight="20dp"
        android:padding="20dp"
        android:textColor="#fff"
        android:drawableLeft="@drawable/fb_logo" />
    <Button
        android:id="@+id/twitter_button"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/button_bg"
        android:layout_marginBottom="10dp"
        android:textColor="#fff"
        android:padding="20dp"
        android:text="@string/sign_in_with_twitter"
        android:drawableStart="@drawable/twitter_logo"
        android:layout_above="@+id/facebook_button"
        android:layout_alignLeft="@+id/facebook_button"
        android:layout_alignStart="@+id/facebook_button"
        android:drawableLeft="@drawable/twitter_logo" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/twitter_button"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="90dp">
     <ImageView
         android:id="@+id/logo"
         android:layout_width="200dp"
         android:layout_height="200dp"
         android:layout_gravity="center"
         app:srcCompat="@drawable/newfire" />
     <TextView
         android:id="@+id/textView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
        android:gravity="center"
         android:layout_marginTop="5dp"
         android:text="@string/app_name"
         android:textColor="#ccc"
         android:textSize="30sp"
         android:textStyle="bold"
         tools:text="Scorch"
         android:layout_gravity="center_horizontal"/>
    </LinearLayout>
